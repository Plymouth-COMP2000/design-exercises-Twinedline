<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:fillViewport="true"
    android:background="#bebebe">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="15dp">

            <TextView
                android:id="@+id/menu_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#000000"
                android:layout_marginStart="15dp"
                android:background="@drawable/orange_round"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp" />

            <TextView
                android:id="@+id/profile_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#000000"

                android:layout_marginStart="170dp"
                android:background="@drawable/orange_round"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/frame_pizza"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/orange_round">

            <ImageView
                android:id="@+id/image_pizza"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/pizza"
                android:scaleType="centerCrop"
                android:outlineProvider="background" />
        </FrameLayout>


        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stromboli_pizza"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_marginStart="90dp"
            app:layout_constraintTop_toBottomOf="@+id/frame_pizza"
            android:background="@drawable/orange_round"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="15dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="£19.99"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:layout_marginStart="50dp"
                android:background="@drawable/orange_round"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                app:layout_constraintTop_toBottomOf="@+id/item_name"
                app:layout_constraintStart_toStartOf="parent"/>


            <TextView
                android:id="@+id/item_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⭐ 4.6"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:layout_marginStart="50dp"
                android:background="@drawable/orange_round"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                app:layout_constraintTop_toBottomOf="@+id/item_name"
                app:layout_constraintStart_toStartOf="parent"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/orange_round"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="20dp"
            android:padding="16dp">

            <TextView
                android:id="@+id/item_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/item_about_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet consectetur adipiscing elit."
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/item_allergies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Allergy Info:"
                android:textSize="20sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/item_allergies_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet consectetur adipiscing elit."
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/item_nutrition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nutritional Info:"
                android:textSize="20sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/item_nutrition_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nutritional Info: Lorem ipsum dolor sit amet consectetur adipiscing elit."
                android:textSize="18sp"
                android:textColor="#000000" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
